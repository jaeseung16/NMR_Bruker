; The reference scan for Ultrafast Z-Spectroscopy
;
; Reference
; Xiang Xu, Jae-Seung Lee, Alexej Jerschow
; Ultrafast scanning of exchangeable sites by NMR spectroscopy
; Angew. Chem. Int. Ed. Engl. 2013;52:8281â€“4.
;
; Prepared by Jae-Seung Lee on 10/5/2017


#include<Avance.incl>
#include<Grad.incl>
#include<De.incl>

"d11=30m"

1  ze
2  d1
   p1 ph1
   5u grad { (0) | (0) | (cnst23) }
   d27
   5u grad { (0) | (0) | (0) }
   p2 ph2
   5u grad { (0) | (0) | (cnst23) }
   d15
   ACQ_START(ph30,ph31)
   aq DWELL_GEN:f1
   5u grad { (0) | (0) | (0) }
   rcyc=2
   400m wr #0
   d11
exit


ph1 = 0 0 2 2 1 1 3 3
ph2 = 1 3 3 1 0 2 2 0 
ph29= 0 0
ph30= 0 0 2 2 1 1 3 3
ph31= 0

;d1 : relaxation delay
;p1 : f1 channel -  90 degree high power pulse
;p2 : f1 channel - 180 degree high power pulse
;cnst23 : strength of z-gradient, 5 - 10
;d27: half of echo time: 10 - 20 ms
; aq : about two times d27, 20 - 40 ms